<%- include("./partials/head.ejs") %>

<div class="grid-container">
  <% for (let i in logs) { %>
  
    <a href="/logs/<%= logs[i].id%>">
      <div class="card">
        <h3><%= logs[i].date %></h3>
        <span class="card-detail">
          <strong>Time:</strong> <%= logs[i].time %> 
        </span>
        <!-- OMG I GOT THIS TO WORK! I needed it to be structured as if statement, couldn't figure out switch -->
        <span class="card-detail">
          <% if (parseInt((logs[i].mood)) == 1) { %>
            <strong>Mood:</strong> <%= logs[i].mood %><span class="history-mood"> ðŸ˜¨ </span>
          <% } %>
          <% if (parseInt((logs[i].mood)) == 2) { %>
            <strong>Mood:</strong> <%= logs[i].mood %><span class="history-mood"> ðŸ˜“ </span>
          <% } %>
          <% if (parseInt((logs[i].mood)) == 3) { %>
            <strong>Mood:</strong> <%= logs[i].mood %><span class="history-mood"> ðŸ˜‘ </span>
          <% } %>
          <% if (parseInt((logs[i].mood)) == 4) { %>
            <strong>Mood:</strong> <%= logs[i].mood %><span class="history-mood"> ðŸ˜Š </span>
          <% } %>
          <% if (parseInt((logs[i].mood)) == 5) { %>
            <strong>Mood:</strong> <%= logs[i].mood %><span class="history-mood"> ðŸ˜Ž </span>
          <% } %>
        </span>
        <span class="card-detail">
          <strong>Description:</strong> <%= logs[i].description %> 
        </span>
        <span class="card-detail">
          <strong>Tags:</strong> <%= logs[i].tags %> 
        </span>
        <span class="color-choice hidden"> <%= logs[i].color %> </span>
      </div>
    </a>
  <% } %>
</div>
</main>

<%- include("./partials/head.ejs") %>

<a href="/logs/<%= log.id %>"><h2 class="title-text"><%= log.date %></h2></a>
<br/>
<div class="flex-container">
  <div class="card">
    <span class="card-detail">
      <strong>Time: </strong> <%= log.time %> 
    </span>
    <span class="card-detail">
      <% if (parseInt((log.mood)) == 1) { %>
        <strong>Mood:</strong> <%= log.mood %><span class="history-mood"> ðŸ˜¨ </span>
      <% } %>
      <% if (parseInt((log.mood)) == 2) { %>
        <strong>Mood:</strong> <%= log.mood %><span class="history-mood"> ðŸ˜“ </span>
      <% } %>
      <% if (parseInt((log.mood)) == 3) { %>
        <strong>Mood:</strong> <%= log.mood %><span class="history-mood"> ðŸ˜‘ </span>
      <% } %>
      <% if (parseInt((log.mood)) == 4) { %>
        <strong>Mood:</strong> <%= log.mood %><span class="history-mood"> ðŸ˜Š </span>
      <% } %>
      <% if (parseInt((log.mood)) == 5) { %>
        <strong>Mood:</strong> <%= log.mood %><span class="history-mood"> ðŸ˜Ž </span>
      <% } %>
    </span>
    <span class="card-detail">
      <strong>Description: </strong> <%= log.description %> 
    </span>
    <span class="card-detail">
      <strong>Tags: </strong> <%= log.tags %> 
    </span>
  </div>
</div>
<br/>
  <a href ="/logs/<%= log.id %>/edit"><button class="button-text">Update this log</button></a>
  <br/>
  <br/>
  <form action="/logs/<%= log.id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete Mood Log" id="delete-btn" />
  </form>
</main>
<aside>
  <div class="flex-container">
    <ul class="welcome-logout">
      <% if (currentUser) { %>
      <li>
        keep going, <%= currentUser.username %> 
      </li>
      <li>
        <form action="/sessions?_method=DELETE" method="POST">
          <input type="submit" value="log out" />
        </form>
      </li>
      <% } else { %>
        <li><a href="/user/new">sign up for an account!</a></li>
        <br />
        <li><a href="/sessions/new">log in!</a></li>
      <% } %>
    </ul>
  </div>
</aside>


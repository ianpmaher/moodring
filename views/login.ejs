<%- include("./partials/head.ejs") %>

<div class="flex-container">
  <h1 class="title-text">Please login:</h1>
  <form class="new-form" action="/sessions/new" method="POST">
    <input type="text" placeholder="Username" name="username" />
    <input type="password" placeholder="Password" name="password" />
    <input type="submit" value="Login" />
  </form>

  <a href="/user/new">Create an Account</a>
</div>
</main>
<aside>
  <div class="flex-container">
    <ul class="welcome-logout">
      <% if (currentUser) { %>
      <li>
        keep going, <%= currentUser.username %> 
      </li>
      <li>
        <form action="/sessions?_method=DELETE" method="POST">
          <input type="submit" value="log out" />
        </form>
      </li>
      <% } else { %>
        <li><a href="/user/new">sign up for an account!</a></li>
        <li><a href="/sessions/new">log in!</a></li>
      <% } %>
    </ul>
  </div>
</aside>
<%- include("./partials/footer.ejs") %>